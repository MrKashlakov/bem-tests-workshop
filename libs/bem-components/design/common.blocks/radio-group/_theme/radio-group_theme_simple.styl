.radio-group_theme_simple
{
    .radio_type_button
    {
        &:first-of-type .button_togglable_radio,
        &~ .radio_type_button .button_togglable_radio
        {
            border-right-width: 0;
        }

        &~ .radio_type_button .button_togglable_radio
        {
            border-radius: 0;
        }

        &:first-of-type .button_togglable_radio
        {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        &:last-of-type .button_togglable_radio
        {
            border-right-width: 1px;
            border-top-right-radius: 3px;
            border-bottom-right-radius: 3px;
        }
    }
}
